@model NotebookStoreMVC.Models.DisplayViewModel

@{
    ViewData["Title"] = "Edit";
}

<header class="d-flex flex-column align-items-start column-gap-2">
    <a asp-action="Index" class="mb-4 text-decoration-none text-black ">
        <svg id="icon-arrow_back_ios" viewBox="0 0 24 24" width="24" height="24">
            <path d="M11.672 3.891l-8.109 8.109 8.109 8.109-1.781 1.781-9.891-9.891 9.891-9.891z"></path>
        </svg>
        Back to List
    </a>
    <h1 class="display-4 fs-3 mb-4">Edit Display</h1>
</header>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" class="d-flex gap-4 flex-column">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Size" class="control-label"></label>
                <input asp-for="Size" class="form-control" />
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResolutionWidth" class="control-label"></label>
                <input asp-for="ResolutionWidth" class="form-control" />
                <span asp-validation-for="ResolutionWidth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResolutionHeight" class="control-label"></label>
                <input asp-for="ResolutionHeight" class="form-control" />
                <span asp-validation-for="ResolutionHeight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PanelType" class="control-label"></label>
                <input asp-for="PanelType" class="form-control" />
                <span asp-validation-for="PanelType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
