@model IEnumerable<NotebookStoreMVC.Models.RoleViewModel>

@{
	ViewData["Title"] = "Index";
}

<header class="d-flex justify-content-between align-items-center">
	<h1>Roles</h1>
	<a asp-action="Create" class="btn btn-outline-primary">Create New</a>
</header>

<div class="container">
	<div class="border-bottom fs-6 justify-content-between text-gray-500 text-start py-3 d-flex flex-nowrap">
		<div class="col-3 px-3 text-break">@Html.DisplayNameFor(model => model.Name)</div>
		<div class="col-6"></div>
	</div>
	@foreach (var item in Model)
	{
		<div class="d-flex justify-content-between w-100 align-items-center py-2 flex-nowrap">
			<div class="d-flex col-3 px-3 text-break">@Html.DisplayFor(modelItem => item.Name)</div>
			<div class="d-flex col-6 column-gap-2 justify-content-end">
				<a asp-action="Edit" asp-route-name="@item.Name" class="btn btn-sm btn-success">
					Edit
				</a>
				@if (item.Name != "Admin")
				{
					<form asp-action="Delete" method="post">
						<input type="hidden" asp-for="@item.Name" name="Name" />
						<button type="submit" class="btn btn-sm btn-danger">Delete</button>
					</form>
				}
				else
				{
					<button type="button" class="btn btn-sm btn-danger" disabled>Delete</button>
				}
			</div>
		</div>
	}
</div>
