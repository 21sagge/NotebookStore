@model NotebookStore.Entities.Notebook

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Notebook</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Color)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Color)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Brand != null ? model.Brand.Name : "")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Model != null ? model.Model.Name : "")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cpu)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cpu != null ? model.Cpu.Brand + " " + model.Cpu.Model : "")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Display)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Display != null ? model.Display.Size + " " + model.Display.ResolutionWidth +
                     "x" + model.Display.ResolutionHeight + " " + model.Display.PanelType : "")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Memory)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Memory != null ? model.Memory.Capacity + " Gb " + model.Memory.Speed + " MHz" : "")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Storage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Storage != null ? model.Storage.Capacity + " Gb " + model.Storage.Type : "")
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
