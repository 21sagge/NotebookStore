@model NotebookStore.Entities.Notebook

@{
	ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
	<h4>Notebook</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Color)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Color)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Price)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.Price)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Brand)
		</dt>
		<dd class="col-sm-10">
			@if (Model.Brand != null)
			{
				@Model.Brand.Name
			}
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Model)
		</dt>
		<dd class="col-sm-10">
			@if (Model.Model != null)
			{
				@Model.Model.Name
			}
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Cpu)
		</dt>
		<dd class="col-sm-10">
			@if (Model.Cpu != null)
			{
				@Model.Cpu.Brand @(" ") @Model.Cpu.Model
			}
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Display)
		</dt>
		<dd class="col-sm-10">
			@if (Model.Display != null)
			{
				@Model.Display.Size @("\" ") @Model.Display.ResolutionWidth @("x") @Model.Display.ResolutionHeight @(" ")
				@Model.Display.PanelType
			}
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Memory)
		</dt>
		<dd class="col-sm-10">
			@if (Model.Memory != null)
			{
				@Model.Memory.Capacity @(" Gb ") @Model.Memory.Speed @(" Mhz ")
			}
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.Storage)
		</dt>
		<dd class="col-sm-10">
			@if (Model.Storage != null)
			{
				@Model.Storage.Capacity @(" Gb ") @Model.Storage.Type
			}
		</dd>
	</dl>
</div>
<div>
	<a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
	<a asp-action="Index">Back to List</a>
</div>
