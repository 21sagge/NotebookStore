@model IEnumerable<NotebookStore.Entities.Cpu>

@{
    ViewData["Title"] = "Index";
}

<header class="d-flex justify-content-between align-items-center">
    <h1>Cpus</h1>
    <a asp-action="Create" class="btn btn-outline-primary">Create New</a>
</header>
<div class="container">
    <div class="border-bottom fs-6 justify-content-between text-gray-500 text-start py-3 d-flex flex-nowrap">
        <div class="col-3">@Html.DisplayNameFor(model => model.Brand)</div>
        <div class="col-3">@Html.DisplayNameFor(model => model.Model)</div>
        <div class="col-6"></div>
    </div>
    @foreach (var item in Model)
    {
        <div class="d-flex justify-content-between w-100 align-items-center py-4 flex-nowrap">
            <div class="d-flex col-3">@Html.DisplayFor(modelItem => item.Brand)</div>
            <div class="d-flex col-3">@Html.DisplayFor(modelItem => item.Model)</div>
            <div class="d-flex col-6 column-gap-2 justify-content-end">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-success">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Details</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
            </div>
        </div>
    }
</div>
