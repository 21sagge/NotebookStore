@model IEnumerable<NotebookStoreMVC.Models.UserViewModel>

@{
	ViewData["Title"] = "Index";
}

<header class="d-flex justify-content-between align-items-center">
	<h1>Users</h1>
</header>
<div class="container">
	<div class="border-bottom fs-6 justify-content-between text-gray-500 text-start py-3 d-flex flex-nowrap">
		<div class="col-3 px-3 text-break">@Html.DisplayNameFor(model => model.Name)</div>
		<div class="col-3 px-3 text-break">@Html.DisplayNameFor(model => model.Email)</div>
		<div class="col-3 px-3 text-break">@Html.DisplayNameFor(model => model.Roles)</div>
		<div class="col-6"></div>
	</div>
	@foreach (var item in Model)
	{
		<div class="d-flex justify-content-between w-100 align-items-center py-2 flex-nowrap">
			<div class="d-flex col-3 px-3 text-break">@Html.DisplayFor(modelItem => item.Name)</div>
			<div class="d-flex col-3 px-3 text-break">@Html.DisplayFor(modelItem => item.Email)</div>
			<div class="d-flex col-3 px-3 text-break">
				@foreach (var role in item.Roles)
				{
					@(role + " ")
				}
			</div>
			<div class="d-flex col-3 column-gap-2 justify-content-end">
				<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-success">
					Edit
				</a>
				@if (!item.Roles.Contains("Admin"))
				{

					<form asp-action="Delete" asp-route-id="@item.Id" method="post">
						<button type="submit" class="btn btn-sm btn-danger">Delete</button>
					</form>
				}
				else
				{
					<button type="button" class="btn btn-sm btn-danger" disabled>Delete</button>
				}
			</div>
		</div>
	}
</div>
