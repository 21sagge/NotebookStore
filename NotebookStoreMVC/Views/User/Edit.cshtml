@model NotebookStoreMVC.Models.UserViewModel

@{
	ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>User</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="Id" />

			<div class="form-group">
				<label asp-for="Roles" class="control-label"></label>
				@foreach (var role in (ViewData["Roles"] as List<string>) ?? new List<string>())
				{
					<div>
						<input type="checkbox" value="@role" name="Roles" @(Model.Roles.Contains(role) ? "checked" : "") />
						<label>@role</label>
					</div>
				}
			</div>

			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Back to List</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
