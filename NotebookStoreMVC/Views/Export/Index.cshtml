@{
  ViewData["Title"] = "Export";
}

<div class="d-flex flex-column">
  <h1 class="display-4">Export</h1>
  <p>Export your data to a file.</p>
  <form asp-action="Export" method="post" class="d-flex align-items-center flex-column text-center mt-5">
    <div class="d-flex w-25 justify-content-evenly align-items-center">
      <label for="dataType">Select Data Type</label>
      <label for="format">Select Format</label>
    </div>
    <div class="d-flex w-25 justify-content-evenly align-items-center mt-3">
      <select id="dataType" name="dataType" class="mb-4 p-2 rounded-pill">
        <option value="Brand">Brand</option>
        <option value="Cpu">Cpu</option>
        <option value="Display">Display</option>
        <option value="Memory">Memory</option>
        <option value="Model">Model</option>
        <option value="Notebook">Notebook</option>
        <option value="Storage">Storage</option>
      </select>
      <select id="format" name="format" class="p-2 mb-4 rounded-pill">
        <option value="json">JSON</option>
        <option value="xml">XML</option>
      </select>
    </div>
    <button type="submit" class="btn btn-primary w-25 rounded">Export</button>
  </form>
</div>